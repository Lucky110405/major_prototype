# File: /collaborative-multi-modal-agentic-framework/collaborative-multi-modal-agentic-framework/forecasting/evaluators/metrics.py
def mean_squared_error(y_true, y_pred):
    return ((y_true - y_pred) ** 2).mean()

def mean_absolute_error(y_true, y_pred):
    return (abs(y_true - y_pred)).mean()

# File: /collaborative-multi-modal-agentic-framework/collaborative-multi-modal-agentic-framework/forecasting/evaluators/visualization.py
import matplotlib.pyplot as plt

def plot_forecast(y_true, y_pred):
    plt.figure(figsize=(10, 5))
    plt.plot(y_true, label='True Values')
    plt.plot(y_pred, label='Predicted Values')
    plt.title('Forecast vs Actual')
    plt.xlabel('Time')
    plt.ylabel('Values')
    plt.legend()
    plt.show()